                    <% if(Habits.days.one =='yes'){ %>
                        <i class="fas fa-check-circle" style="color: green; font-size: 1.5rem;"></i>
                        <% } else if(Habits.days.one =='no'){ %>
                        <i class="fas fa-times-circle" style="color: red; font-size: 1.5rem;"></i>
                        <% } else { %>
