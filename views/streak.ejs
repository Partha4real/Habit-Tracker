<div class="back_to_dashboard">
    <a href="/user/dashboard" id="back_dashB"><span id="link_text"><i class="fas fa-home"></i> Dashboard</span></a>
</div>
<!-- Last seven days -->
<div id="streak_details">
    <h3 class="text-info m-2 p-2"><b><%= Habits.habit %></b></h3>
    <ul class="list-inline">
        <li class="list-inline-item" id="list-streak"></li>
            <% for (let i = 0; i < 7; i++) { %>
                <span id="seven_days"><%= today.subtract(i, 'days').format('ddd, MMM Do') %></span>             
            <% } %>
        </li>
    </ul>
